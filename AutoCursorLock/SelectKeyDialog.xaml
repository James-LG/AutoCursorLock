<Window x:Class="AutoCursorLock.SelectKeyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AutoCursorLock.Extensions"
        mc:Ignorable="d"
        Title="SelectKeyDialog" Height="100" Width="100">
    <Window.Resources>
        <local:KeyToStringConverter x:Key="KeyConverter" />
    </Window.Resources>
    <Grid x:Name="mainGrid" PreviewKeyDown="mainGrid_PreviewKeyDown" Focusable="True">
        <TextBlock Text="{Binding SelectedKey, Converter={StaticResource KeyConverter}, FallbackValue='Press Any Key'}"  HorizontalAlignment="Center" VerticalAlignment="Center"/>
    </Grid>
</Window>
